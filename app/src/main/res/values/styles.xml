<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#1477E1</item>
    <item name="colorPrimaryDark">#1B67FF</item>
    <item name="colorAccent">#2C4AE3</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/splashin</item>
  </style>

  <style name="MyTheme" parent="AppTheme">
  <item name="colorPrimary">#1477E1</item>
  <item name="colorPrimaryDark">#0325FF</item>
    <item name="android:textColor">#3464B6</item>
  </style>

  <style name="MyTheme_babk" parent="AppTheme">
    <item name="colorPrimary">#FF0000</item>
    <item name="colorPrimaryDark">#FF0000</item>
    <item name="android:textColor">#FF0000</item>
  </style>

</resources>
